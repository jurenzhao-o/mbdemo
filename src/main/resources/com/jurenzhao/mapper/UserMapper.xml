    <select id="findUserByIds" resultType="com.jurenzhao.pojo.User" >
        select * from user
        <where>
            id in
            <foreach collection="list" open="(" close=")" item="id" separator=",">
                #{id}
            </foreach>
        </where>
    </select>

    <insert id="insertBatch" parameterType="com.jurenzhao.pojo.User">
        INSERT INTO user  values
